{
	"name": "custom-element-kit",
	"version": "0.0.1",
	"description": "Collection of custom elements",
	"type": "module",
	"scripts": {
		"serve": "http-server src",
		"serve:prod": "http-server dist",
		"test": "npx playwright test",
		"test:update-snapshots": "npx playwright test --update-snapshots",
		"build": "rollup -c",
		"format": "npx @biomejs/biome check --write --unsafe .",
		"check": "npx @biomejs/biome check ."
	},
	"keywords": ["web components", "custom elements"],
	"author": "Duncan Hunter",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "1.9.3",
		"@playwright/test": "1.47.2",
		"@rollup/plugin-terser": "0.4.4",
		"@web/rollup-plugin-html": "2.3.0",
		"get-port": "^7.1.0",
		"highlight.js": "11.10.0",
		"http-server": "14.1.1",
		"lighthouse": "^12.2.1",
		"linkedom": "0.18.5",
		"playwright": "^1.47.2",
		"playwright-lighthouse": "^4.0.0",
		"rollup": "2.79.2",
		"rollup-plugin-minify-html-literals": "1.2.6",
		"rollup-plugin-multi-input": "1.5.0",
		"rollup-plugin-summary": "2.0.1"
	}
}
